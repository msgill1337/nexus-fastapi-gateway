# Azure Content Safety Configuration
AZURE_CONTENT_SAFETY_ENDPOINT=https://your-content-safety-endpoint.cognitiveservices.azure.com/
AZURE_CONTENT_SAFETY_KEY=your_content_safety_api_key_here

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# Redis Configuration (optional - defaults shown)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password_if_needed

# Logging Configuration (optional - defaults shown)
LOG_FILE=api.log
LOG_LEVEL=INFO

# Cost Configuration - USD per 1K tokens (optional - defaults shown)
INPUT_COST_PER_1K=0.00015
OUTPUT_COST_PER_1K=0.0006

# Rate Limiting Configuration (optional - defaults shown)
RATE_LIMIT_TOKENS=1000
RATE_LIMIT_WINDOW_SECONDS=3600

